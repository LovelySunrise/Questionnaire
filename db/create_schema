CREATE DATABASE questionnaire;

CREATE TABLE ELEMENT(
    ID SERIAL NOT NULL PRIMARY KEY,
    TYPE VARCHAR(100) NOT NULL,
    NAME VARCHAR(100),
    STYLE VARCHAR(1000),
    CSS_CLASS_ID INT
);

CREATE TABLE LAYOUT(
    ID SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(100),
    NOTE VARCHAR(1000)
);

CREATE TABLE CSS_CLASS(
    ID SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(100) NOT NULL
);

CREATE TABLE EVENT_TYPE(
    ID SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(100) NOT NULL
);

CREATE TABLE JAVASCRIPT_FUNCTION(
    ID SERIAL NOT NULL PRIMARY KEY,
    VALUE VARCHAR(500) NOT NULL
);

CREATE TABLE SELECT_OPTION(
    ID SERIAL NOT NULL PRIMARY KEY,
    NAME VARCHAR(100) NOT NULL
);

CREATE TABLE ELEMENT_TO_EVENT_REF(
    ID SERIAL NOT NULL PRIMARY KEY,
    EVENT_TYPE_ID INT NOT NULL,
    JAVASCRIPT_FUNCTION_ID INT NOT NULL
);

CREATE TABLE ELEMENT_TO_LAYOUT_REF(
    ID SERIAL NOT NULL PRIMARY KEY,
    LAYOUT_ID INT NOT NULL,
    ELEMENT_ID INT NOT NULL
);

CREATE TABLE SELECT_ELEMENT_TO_SELECT_OPTION_REF(
    ID SERIAL NOT NULL PRIMARY KEY,
    ELEMENT_ID INT NOT NULL,
    SELECT_OPTION_ID INT NOT NULL
);
